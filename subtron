PINK='\033[1;35m'
LBLUE='\033[1;36m'
WHITE='\033[1;37m'

echo ""
echo "                                                                                    
░██████╗██╗░░░██╗██████╗░████████╗██████╗░░█████╗░███╗░░██╗
